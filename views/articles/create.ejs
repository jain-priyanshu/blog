<%- include("../_layout_header") %>

<div class="jumbotron mb-0">
    <center><h1>Create</h1></center>
</div>
<div class="jumbotron" style="background-color: #333; color: #ddd;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <form action="/articles/create" method="POST">
                    <div class="form-group">
                        <label for="title" name="title">Title</label>
                        <input required type="text" name="title" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="description" name="description">Description</label>
                        <textarea required name="description" rows="2" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="content" name="content">Content</label>
                        <textarea required name="content" rows="4" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("../_layout_footer") %>